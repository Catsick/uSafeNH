<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/Crisis_centers"
            android:text="@string/Crisis_centers"
            android:drawableLeft="@drawable/crisis_center"
            android:padding="10dp"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/roundedbutton"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/Local_police"
            android:layout_alignStart="@+id/Local_police" />

        <Button
            android:id="@+id/Local_hospital"
            android:text="@string/Local_hospital"
            android:drawableLeft="@drawable/hospital2"
            android:padding="10dp"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/roundedbutton"
            android:layout_below="@+id/Crisis_centers" />

        <Button
            android:background = "@drawable/roundedbutton"
            android:id="@+id/Campus_resources"
            android:drawableLeft="@drawable/campus_resources"
            android:text="@string/Campus_resources"
            android:padding="10dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Local_hospital" />

        <Button
            android:id="@+id/Local_police"
            android:text="@string/Local_police"
            android:drawableLeft="@drawable/police2"
            android:padding="15dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/roundedbutton"
            android:layout_below="@+id/Campus_resources" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="472dp"
        android:layout_marginStart="472dp" />

    <Button
        android:id="@+id/faq"
        android:text="@string/faq"
        android:padding="15dp"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:background="@drawable/roundedbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp" />
</RelativeLayout>